pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                echo 'Building..'
                bat 'mvn clean package'
            }
            post {
                success {
                        echo 'Now Archiving...'
                        archiveArtifacts artifacts: '**/target/*.war'
                }
            }
        }
        stage('Deploy-to-staging') {
            steps {
                echo 'deploying to staging..'
                    build job: 'jenkinsfile-deploy-to-staging'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
            }
        }
    }
}
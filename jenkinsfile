pipeline {
    agent any

    parameters {
         string(name: 'tomcat_dev', defaultValue: '18.188.87.202', description: 'Staging Server')
         string(name: 'tomcat_prod', defaultValue: '13.58.64.255', description: 'Production Server')
    }

    triggers {
         pollSCM('* * * * *')
     }

stages{
        stage('Build'){
            steps {
                bat 'mvn clean package'
            }
            post {
                success {
                    echo 'Now Archiving...'
                    archiveArtifacts artifacts: '**/*.war'
                }
                failure {
                    echo 'Build step failed'
                }
            }
        }

        stage ('Deployments'){
            parallel{
                stage ('Deploy to Staging'){
                    steps {
                        sh "cp **/*.war http://localhost:8090/"
                    }
                }

                stage ("Deploy to Production"){
                    steps {
                        sh "cp **/*.war http://localhost:9090/"
                    }
                }
            }
        }
    }
}
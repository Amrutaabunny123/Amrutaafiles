pipeline{ 
  agent any
  tools {
    maven 'maven'
  }
  stages{
    stage('Build'){
      steps{
        script {
          if(isUnix()){
            sh 'mvn clean package'
          }else{
            bat 'mvn clean package'
          }
        }
      }
      post {
        success {
          echo 'Now Archiving...'
          archiveArtifacts artifacts: '**/target/*.war', onlyIfSuccessful: true
        }
      }
    }
  }
}